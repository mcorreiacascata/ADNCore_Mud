@page "/listagens/clientesficha"

@code {
    public string PageTitle { get; set; } = "Clientes";
}

<!-- BREADCRUMBS : START -->
<MudBreadcrumbs Items=@_items class="pa-1 pb-2" Style="font-size: 16px">
</MudBreadcrumbs>

@code {
    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
{
new BreadcrumbItem("Dashboard", href: "#"),
new BreadcrumbItem("Listagens", href: "#"),
new BreadcrumbItem("Clientes", href: "#"),
new BreadcrumbItem("Ficha", href: null, disabled: true)
};
}
<!-- BREADCRUMBS : END -->

<!-- PAGE TITLE : START -->
<PageTitle>@PageTitle</PageTitle>
<MudText Typo="Typo.h3" class="pa-0 ma-0" GutterBottom="true">@PageTitle</MudText>

<!-- PAGE TITLE : END -->

<!-- APP BAR : START -->
<MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
    <MudToolBar class="pa-0 ma-0">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Edit" Color="Color.Primary"
            Size="Size.Small">
            Editar
        </MudButton>
    </MudToolBar>
</MudHidden>
<!-- APP BAR: END -->

<!-- MOBILE APP BAR : START -->
<MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
    <MudAppBar Bottom="true" Fixed="true" Color="Color.Primary" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Edge="Edge.Start" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
</MudHidden>
<!-- MOBILE APP BAR : END -->

<!-- PAGE CONTENT : START -->
<MudContainer class="pa-0">
    <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true">
        <MudTabPanel Text="Ficha">
            <MudPaper Class="pa-2 ma-0" Outlined="true">
                <ClienteFichaFicha />
            </MudPaper>
        </MudTabPanel>
        <MudTabPanel Text="Projetos">
            <MudPaper Class="pa-2 ma-0" Outlined="true">
                <ClienteFichaProjetos />
            </MudPaper>
        </MudTabPanel>
        <MudTabPanel Text="Contactos">
            <MudPaper Class="pa-2 ma-0" Outlined="true">
                <ClienteFichaContactos />
            </MudPaper>
        </MudTabPanel>
        <MudTabPanel Text="Ocorrências">
            <MudPaper Class="pa-2 ma-0" Outlined="true">
                <ClienteFichaOcorrencias />
            </MudPaper>
        </MudTabPanel>
    </MudTabs>
</MudContainer>
<!-- PAGE CONTENT : END -->


